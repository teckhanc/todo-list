<%- include("partials/header") -%>
<h1>My Todo List</h1>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-6 col-md-4 col-sm-12 create">
      <div class="input-group mb-3">
        <h3> New Todo List </h3>
        <form action="/create" method="post">
          <input class="text-input form-control" type="text" name="todoName" value="Untitiled" placeholder="Title">
          <div class="input-group-append">
            <button class="btn btn-primary" type="Submit">Create</button>
          </div>
        </form>
      </div>
    </div>

    <% lists.forEach(function(list) { %>
      <div class="col-lg-2 col-md-3 col-sm-4 list-size">
        <p class="list-name"><a href="/list/<%=list.listId %>"> <%= list.title %> </a></p>
        <p class="items-in-list"><%=list.content.length%></p>
        <form class="" action="/delete" method="post">
          <button class="bin" type="Submit" name="listId" value="<%=list.listId %>"><i class="far fa-trash-alt"></i></button>
        </form>
      </div>
    <% }); %>
  </div>
</div>
<%- include("partials/footer") -%>
